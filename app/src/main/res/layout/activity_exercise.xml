<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".creator.ExerciseActivity">

    <TextView
            android:layout_width="115dp"
            android:layout_height="34dp"
            android:id="@+id/exercise_title_text_view" android:text="Name"
            android:layout_marginTop="116dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            style="@style/TextViewCreator"/>
    <TextView
            android:layout_width="152dp"
            android:layout_height="32dp"
            android:id="@+id/exercise_instruction_text_view" android:text="Instruction"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            style="@style/TextViewCreator" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/exercise_title_edit_text" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/exercise_title_text_view"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:hint="Name"
            android:background="@null"/>
    <EditText
            android:layout_width="211dp"
            android:layout_height="88dp"
            android:inputType="text|textMultiLine"
            android:text=" "
            android:ems="10"
            android:id="@+id/exercise_instruction_edit_text"
            android:singleLine="false"
            android:lines="8"
            android:minLines="6"
            android:maxLines="10"
            app:layout_constraintTop_toTopOf="@+id/exercise_instruction_text_view"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:background="@null"
            android:hint="Instruction"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/exercise_description_edit_text"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:hint="Description"
            android:background="@null"/>
    <TextView
            android:text="Description"
            android:layout_width="146dp"
            android:layout_height="33dp"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            style="@style/TextViewCreator" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_title_text_view"/>
    <RadioGroup
            android:layout_width="85dp"
            android:layout_height="62dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/radio_group" app:layout_constraintHorizontal_bias="0.336"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/exercise_instruction_edit_text">
        <RadioButton
                android:text="Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radio_button_time" android:layout_weight="1"/>
        <RadioButton
                android:text="Repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radio_button_repeat" android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_exercise_activity" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:onClick="nextExercise"/>
    <TextView
            android:text="Create Exercise"
            android:layout_width="210dp"
            android:layout_height="49dp"
            android:id="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            style="@style/TextViewCreator" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>