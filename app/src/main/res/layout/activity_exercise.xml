<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".creator.ExerciseActivity">

    <TextView
            android:layout_width="89dp"
            android:layout_height="23dp"
            android:id="@+id/exercise_title_text_view" android:text="exercise title "
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"/>
    <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:id="@+id/exercise_instruction_text_view" android:text="exercise instruction"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="@+id/exercise_title_text_view"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="title "
            android:ems="10"
            android:id="@+id/exercise_title_edit_text" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/exercise_title_text_view"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/exercise_title_text_view"
            app:layout_constraintHorizontal_bias="0.783"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="title "
            android:ems="10"
            android:id="@+id/exercise_instruction_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/exercise_instruction_text_view"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/exercise_instruction_text_view"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="title "
            android:ems="10"
            android:id="@+id/exercise_description_edit_text"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView"/>
    <TextView
            android:text="Description"
            android:layout_width="118dp"
            android:layout_height="22dp"
            android:id="@+id/textView" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/exercise_instruction_text_view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"/>
    <RadioGroup
            android:layout_width="85dp"
            android:layout_height="63dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/radio_group">
        <RadioButton
                android:text="Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radio_button_time" android:layout_weight="1"/>
        <RadioButton
                android:text="Repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radio_button_repeat" android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_exercise_activity" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:onClick="nextExercise"/>
</android.support.constraint.ConstraintLayout>